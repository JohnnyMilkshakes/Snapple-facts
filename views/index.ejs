<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Home Page</title>
  </head>
  <body>

        <div class="page-container">
            <div class="sidebar">
                <%- include('partials/sidebar')%>
            </div>
            <div class="main-area">
                <% if (user) { %>
                    <h1>Welcome to the home of everything Snapple Facts, <%= user.username %>!</h1>
                <% } else { %>
                    <h1>Welcome to the home of everything Snapple Facts!</h1>
                <% } %>
                <form action="/" method="get">
                    <input type="text" name="query" id="searchInput" placeholder="Find a specific number">
                    <button type="submit">Find</button>
                </form>
                <div class="fact-container">
                    <h2 class="fact-title">Snapple Fact # <%= snappleFact.number %></h2>
                    <p class="fact-text"><%= snappleFact.fact %></p>
                    <div class="fact-buttons">
                        <button><--</button>
                        <button><a href="/">Randomize</a></button>
                        <button>--></button>
                    </div>
                </div>
            </div>

         </div>

        <!-- <p><a href="/vip-lounge">Get into the VIP Users Only lounge!</a></p> -->

  </body>
</html>